%section.billing.container
  .row
    .span10.offset1
      .plan_and_payments
        %section.plan
          %header
            %h1 Billing
          %table.table
            %thead
              %tr
                %th Plan
                %th Next Billing Date
                %th Price
            %tbody
              %tr
                %td The All You Can Watch Plan
                %td= @user.next_bill
                %td 9.99 per month
        = button_to "Cancel Service", nil, class: "btn"

        %section.payment_history
          %header
            %h3 Payment History
          %table.table
            %thead
              %tr
                %th Date
                %th Service Duration
                %th Total
            %tbody
              - @payments.reverse.each do |payment|
                %tr
                  %td= payment.payment_date
                  %td= payment.service_duration
                  %td $9.99