%section.admin_payments
  .container
    .row
      .span10.offset1
        %section.payment_history
          %ul.nav.nav-tabs
            %li.active
              %a(href="") Recent Payments
            %li
              =link_to "Add a New Video", new_admin_video_path
          %table.table
            %thead
              %tr
                %th Name
                %th Email
                %th Amount
                %th Reference ID
            %tbody
              - @payments.reverse.each do |payment|
                %tr
                  %td= payment.user.username
                  %td= payment.user.email
                  %td= "$#{payment.amount.to_f / 100}"
                  %td= payment.reference_id
