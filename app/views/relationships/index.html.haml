%section.people
  %header
    %h2 People I Follow
  %table.table
    %thead
      %tr
        %th(width="30%")
        %th(width="20%") Videos in Queue
        %th(width="20%") Followers
        %th(width="30%") Unfollow
    %tbody
      - @relationships.each do |relationship|
        %tr
          %td
            = image_tag avatar_url(relationship.leader)
            = link_to "#{relationship.leader.username}", relationship.leader
          %td.extra-padding= relationship.leader.queue_items.count
          %td.extra-padding= relationship.leader.leading_relationships.count
          %td.extra-padding
            = link_to relationship, id: "remove #{relationship.leader.username}", method: :delete do
              %i.icon-remove
